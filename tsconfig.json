{
  "compilerOptions": {
    "target": "es5", // 指定ECMAScript目标版本
    "module": "es2015", // 指定模块代码类型
    "lib": [
      "es2015",
      "es2017",
      "dom"
    ], // 指定要包含在编译中的库文件
    "outDir": "./dist", // 编译后生成的文件目录
    "strict": true, // 启用所有严格的类型检查选项
    "esModuleInterop": true,
    "declaration": true, //打包之后是否生成声明文件
  },
  "include": [
    "src/lib"
  ],
}